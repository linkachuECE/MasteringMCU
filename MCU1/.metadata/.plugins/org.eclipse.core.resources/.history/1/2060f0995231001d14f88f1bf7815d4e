#ifndef INC_STM32407XX_SPI_DRIVER_H_
#define INC_STM32407XX_SPI_DRIVER_H_

#include "stm32407xx_spi_driver.h"
#include "stm32f407xx.h"

typedef struct{
	uint8_t SPI_DeviceMode;
	uint8_t SPI_BusConfig;
	uint8_t SPI_SclkSpeed;
	uint8_t SPI_DFF;
	uint8_t SPI_CPOL;
	uint8_t SPI_CPHA;
	uint8_t SPI_SSM;
} SPI_Config_t;

typedef struct{
	SPI_RegDef_t 	*pSPIx;
	SPI_Config_t	SPIConfig;
} SPI_Handle_t;

// Peripheral clock setup
void SPI_PeriClockControl(GPIO_RegDef_t *pGPIOx, uint8_t EnorDi);

// Init and de-enit
void SPI_Init(GPIO_Handle_t *pGPIOHandle);
void SPI_DeInit(GPIO_RegDef_t *pGPIOx);

#endif /* INC_STM32407XX_SPI_DRIVER_H_ */
